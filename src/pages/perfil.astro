---
import "../styles/global.css";
import "../styles/perfil.css";
---
<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Configuración</title>
    <script src="https://cdn.tailwindcss.com"></script>
</head>
<body>
    <div class="main-container">
        <!-- Header -->
        <div class="w-full bg-white">
            <div class="flex items-center justify-center p-4 border-b border-gray-100">
                <h1 class="text-lg font-semibold text-gray-900 text-center">Configuración</h1>
            </div>
        </div>

        <!-- Perfil de usuario -->
        <div class="bg-white">
            <div class="flex flex-col items-center py-8 px-4">
                <div class="avatar-placeholder mb-4">
                    <img src="/images/perfil.png" alt="" class="rounded-full w-36 h-36 object-cover">
                </div>
                <h2 class="text-xl font-semibold text-gray-900 mb-1">Sofía Ramírez</h2>
                <p class="text-sm text-gray-500">4.98 • 123 viajes</p>
            </div>
        </div>

        <!-- Sección Cuenta -->
        <div class="px-4 mb-6">
            <h3 class="text-sm font-medium text-gray-900 mb-3">Cuenta</h3>
            
            <div class="space-y-1">
                <button onclick="editProfile()" class="settings-option w-full flex items-center justify-between p-3 rounded-lg">
                    <span class="text-gray-700">Editar perfil</span>
                    <svg class="w-5 h-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
                    </svg>
                </button>
                
                <button onclick="emergencyContact()" class="settings-option w-full flex items-center justify-between p-3 rounded-lg">
                    <span class="text-gray-700">Contacto de emergencia</span>
                    <svg class="w-5 h-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
                    </svg>
                </button>
                
                <button onclick="paymentMethods()" class="settings-option w-full flex items-center justify-between p-3 rounded-lg">
                    <span class="text-gray-700">Métodos de pago</span>
                    <svg class="w-5 h-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
                    </svg>
                </button>
            </div>
        </div>

        <!-- Sección Configuración de la App -->
        <div class="px-4 mb-6">
            <h3 class="text-sm font-medium text-gray-900 mb-3">Configuración de la app</h3>
            
            <div class="space-y-1">
                <button onclick="notifications()" class="settings-option w-full flex items-center justify-between p-3 rounded-lg">
                    <span class="text-gray-700">Notificaciones</span>
                    <svg class="w-5 h-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
                    </svg>
                </button>
                
                <div class="settings-option w-full flex items-center justify-between p-3 rounded-lg">
                    <span class="text-gray-700">Idioma</span>
                    <span class="text-gray-500">Español</span>
                </div>
                
                <button onclick="privacy()" class="settings-option w-full flex items-center justify-between p-3 rounded-lg">
                    <span class="text-gray-700">Privacidad</span>
                    <svg class="w-5 h-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
                    </svg>
                </button>
            </div>
        </div>
    </div>

    <!-- Navegación inferior fija -->
    <nav class="bg-white border-t border-gray-200 fixed bottom-0 w-full">
        <div class="flex justify-around py-2">
            <button class="flex flex-col items-center p-2 text-gray-600">
                <a href="/">
                    <svg class="w-6 h-6 mb-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6"></path>
                    </svg>
                </a>
                <span class="text-xs">Inicio</span>
            </button>
            <button class="flex flex-col items-center p-2 text-gray-600">
                <svg class="w-6 h-6 mb-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z"></path>
                </svg>
                <span class="text-xs">Seguridad</span>
            </button>
            <button class="flex flex-col items-center p-2 text-gray-600">
                <a href="/mapa">
                    <svg class="w-6 h-6 mb-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 20l-5.447-2.724A1 1 0 013 16.382V5.618a1 1 0 011.447-.894L9 7m0 13l6-3m-6 3V7m6 10l4.553 2.276A1 1 0 0021 18.382V7.618a1 1 0 00-.553-.894L15 4m0 13V4m0 0L9 7"></path>
                    </svg>
                </a>
                <span class="text-xs">Mapa</span>
            </button>
            <button class="flex flex-col items-center p-2 text-gray-600">
                <a href="/perfil">
                    <svg class="w-6 h-6 mb-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
                    </svg>
                </a>
                <span class="text-xs">Cuenta</span>
            </button>
        </div>
    </nav>
    <script type="module" src="/js/perfil.js"></script>
</body>
</html>