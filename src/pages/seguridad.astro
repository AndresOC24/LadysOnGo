---
import '../styles/seguridad.css';
import '../styles/global.css';
---

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, viewport-fit=cover">
    <title>Seguridad</title>
    <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-gray-50 font-sans">
    <div class="relative min-h-screen">
        <!-- Header -->
        <div class="absolute top-0 left-0 right-0 bg-white/95 backdrop-blur-sm border-b border-gray-100">
            <div class="px-4 py-3">
                <div class="flex items-center justify-center p-2">
                    <h1 class="text-xl font-semibold text-gray-900 text-center">Seguridad</h1>
                    <div class="w-6"></div>
                </div>
            </div>
        </div>

        <!-- Main Content -->
        <div class="pt-16 pb-24 px-4">
            <!-- Sección del Botón de Pánico -->
            <div class="flex flex-col items-center py-12">
                <h2 class="text-lg font-semibold text-gray-700 mb-8">Botón de Pánico</h2>
                <button class="panic-button bg-pink-500 text-white rounded-full w-32 h-32 flex items-center justify-center text-lg font-semibold hover:bg-pink-600 transition-colors" onclick="activatePanic()">
                    Presiona
                </button>
            </div>

            <!-- Configuración de Emergencia -->
            <div class="space-y-4">
                <!-- Contacto de emergencia -->
                <div class="setting-item bg-white rounded-lg p-4 shadow-sm">
                    <div class="flex justify-between items-start">
                        <div class="flex-1">
                            <div class="setting-label text-gray-600">Contacto de emergencia</div>
                            <div class="setting-value text-gray-900">+591 69014020</div>
                        </div>
                        <button class="change-button text-pink-500 font-semibold hover:text-pink-600 border-2 border-pink-500 hover:bg-pink-500 hover:text-white rounded-lg px-4 py-2 transition-colors" onclick="changeEmergencyContact()">
                            Cambiar
                        </button>
                    </div>
                </div>

                <!-- Mensaje de alerta -->
                <div class="setting-item bg-white rounded-lg p-4 shadow-sm">
                    <div class="flex justify-between items-start">
                        <div class="flex-1">
                            <div class="setting-label text-gray-600">Mensaje de alerta</div>
                            <div class="setting-value text-gray-900">Estoy en peligro, mi ubicación es <span class="font-semibold">Mi ubicación</span></div>
                        </div>
                        <button class="change-button text-pink-500 font-semibold hover:text-pink-600 border-2 border-pink-500 hover:bg-pink-500 hover:text-white rounded-lg px-4 py-2 transition-colors" onclick="changeAlertMessage()">
                            Cambiar
                        </button>
                    </div>
                </div>

                <!-- Configuraciones adicionales -->
                <div class="setting-item bg-white rounded-lg p-4 shadow-sm">
                    <div class="flex justify-between items-center">
                        <div class="flex-1">
                            <div class="setting-label text-gray-600">Envío automático de ubicación</div>
                            <div class="setting-value text-gray-900">Activado</div>
                        </div>
                        <label class="relative inline-flex items-center cursor-pointer">
                            <input type="checkbox" checked class="sr-only peer" onchange="toggleLocationSharing()">
                            <div class="w-11 h-6 bg-gray-200 peer-focus:outline-none peer-focus:ring-4 peer-focus:ring-pink-300 rounded-full peer peer-checked:after:translate-x-full peer-checked:after:border-white after:content-[''] after:absolute after:top-[2px] after:left-[2px] after:bg-white after:border-gray-300 after:border after:rounded-full after:h-5 after:w-5 after:transition-all peer-checked:bg-pink-500"></div>
                        </label>
                    </div>
                </div>

                <div class="setting-item bg-white rounded-lg p-4 shadow-sm">
                    <div class="flex justify-between items-center">
                        <div class="flex-1">
                            <div class="setting-label text-gray-600">Grabación de audio automática</div>
                            <div class="setting-value text-gray-900">Desactivado</div>
                        </div>
                        <label class="relative inline-flex items-center cursor-pointer">
                            <input type="checkbox" class="sr-only peer" onchange="toggleAudioRecording()">
                            <div class="w-11 h-6 bg-gray-200 peer-focus:outline-none peer-focus:ring-4 peer-focus:ring-pink-300 rounded-full peer peer-checked:after:translate-x-full peer-checked:after:border-white after:content-[''] after:absolute after:top-[2px] after:left-[2px] after:bg-white after:border-gray-300 after:border after:rounded-full after:h-5 after:w-5 after:transition-all peer-checked:bg-pink-500"></div>
                        </label>
                    </div>
                </div>
            </div>
        </div>

        <!-- Navegación inferior -->
        <nav class="absolute bottom-0 left-0 right-0 bg-white border-t border-gray-200">
            <div class="flex justify-around py-2">
                <button class="flex flex-col items-center p-2 text-gray-600 nav-btn" data-tab="inicio">
                    <a href="/">
                        <svg class="w-6 h-6 mb-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6"></path>
                        </svg>
                    </a>
                    <span class="text-xs">Inicio</span>
                </button>
                
                <button class="flex flex-col items-center p-2 text-pink-500 nav-btn" data-tab="seguridad">
                    <svg class="w-6 h-6 mb-1" fill="currentColor" viewBox="0 0 20 20">
                        <path fill-rule="evenodd" d="M2.166 4.999A11.954 11.954 0 0010 1.944 11.954 11.954 0 0017.834 5c.11.65.166 1.32.166 2.001 0 5.225-3.34 9.67-8 11.317C5.34 16.67 2 12.225 2 7c0-.682.057-1.35.166-2.001zm11.541 3.708a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"></path>
                    </svg>
                    <span class="text-xs">Seguridad</span>
                </button>
                
                <button class="flex flex-col items-center p-2 text-gray-600 nav-btn" data-tab="mapa">
                    <a href="/mapa">
                        <svg class="w-6 h-6 mb-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 20l-5.447-2.724A1 1 0 013 16.382V5.618a1 1 0 011.447-.894L9 7m0 13l6-3m-6 3V7m6 10l4.553 2.276A1 1 0 0021 18.382V7.618a1 1 0 00-.553-.894L15 4m0 13V4m0 0L9 7"></path>
                        </svg>
                    </a>
                    <span class="text-xs">Mapa</span>
                </button>
                
                <button class="flex flex-col items-center p-2 text-gray-600 nav-btn" data-tab="cuenta">
                    <a href="/perfil">
                        <svg class="w-6 h-6 mb-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
                        </svg>
                    </a>
                    <span class="text-xs">Cuenta</span>
                </button>
            </div>
        </nav>
    </div>
    <script type="module" src="/seguridad.js"></script>
</body>
</html>