---
import "../styles/global.css";
---

<!doctype html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, viewport-fit=cover" />
    <title>Lady's On Go - Inicio</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="stylesheet" href="https://unpkg.com/leaflet@1.9.4/dist/leaflet.css" />
    <script src="https://unpkg.com/leaflet@1.9.4/dist/leaflet.js"></script>
    <script src="https://unpkg.com/leaflet-routing-machine@3.2.12/dist/leaflet-routing-machine.js"></script>
    <link rel="stylesheet" href="https://unpkg.com/leaflet-routing-machine@3.2.12/dist/leaflet-routing-machine.css" />
  </head>
  <body>
    <div class="bg-gray-50 font-sans min-h-screen">
      <!-- Overlay para el menú -->
      <div class="menu-overlay" id="menuOverlay"></div>

      <!-- Menú deslizante -->
      <div class="slide-menu" id="slideMenu">
        <div class="h-full flex flex-col">
          <!-- Header del menú -->
          <div class="bg-gradient-to-r from-pink-400 to-pink-500 p-6 text-white">
            <div class="flex items-center space-x-3">
              <div class="w-12 h-12 bg-white rounded-full flex items-center justify-center">
                <img class="rounded-full object-cover" src="/images/perfil.png" alt="" />
              </div>
              <div>
                <h3 class="font-semibold text-lg">Hola, Bianca</h3>
                <p class="text-pink-100 text-sm">¡Bienvenida!</p>
              </div>
            </div>
          </div>

          <!-- Items del menú -->
          <div class="flex-1 py-4">
            <a href="#" class="menu-item flex items-center px-6 py-4 text-gray-700 hover:text-pink-600">
              <svg class="w-5 h-5 mr-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
              </svg>
              <span class="font-medium">Mi Perfil</span>
            </a>

            <a href="#" class="menu-item flex items-center px-6 py-4 text-gray-700 hover:text-pink-600">
              <svg class="w-5 h-5 mr-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
              </svg>
              <span class="font-medium">Historial de Viajes</span>
            </a>

            <a href="#" class="menu-item flex items-center px-6 py-4 text-gray-700 hover:text-pink-600">
              <svg class="w-5 h-5 mr-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 10h18M7 15h1m4 0h1m-7 4h12a3 3 0 003-3V8a3 3 0 00-3-3H6a3 3 0 00-3 3v8a3 3 0 003 3z"></path>
              </svg>
              <span class="font-medium">Métodos de Pago</span>
            </a>

            <a href="#" class="menu-item flex items-center px-6 py-4 text-gray-700 hover:text-pink-600">
              <svg class="w-5 h-5 mr-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 18h.01M8 21h8a2 2 0 002-2V5a2 2 0 00-2-2H8a2 2 0 00-2 2v14a2 2 0 002 2z"></path>
              </svg>
              <span class="font-medium">Contactos de Emergencia</span>
            </a>

            <a href="#" class="menu-item flex items-center px-6 py-4 text-gray-700 hover:text-pink-600">
              <svg class="w-5 h-5 mr-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z"></path>
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path>
              </svg>
              <span class="font-medium">Configuración</span>
            </a>

            <a href="#" class="menu-item flex items-center px-6 py-4 text-gray-700 hover:text-pink-600">
              <svg class="w-5 h-5 mr-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8.228 9c.549-1.165 2.03-2 3.772-2 2.21 0 4 1.343 4 3 0 1.4-1.278 2.575-3.006 2.907-.542.104-.994.54-.994 1.093m0 3h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
              </svg>
              <span class="font-medium">Centro de Ayuda</span>
            </a>

            <a href="#" class="menu-item flex items-center px-6 py-4 text-gray-700 hover:text-pink-600">
              <svg class="w-5 h-5 mr-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
              </svg>
              <span class="font-medium">Acerca de Lady's On Go</span>
            </a>
          </div>

          <!-- Footer del menú -->
          <div class="border-t border-gray-200 p-4">
            <a href="#" class="menu-item flex items-center px-2 py-3 text-red-600 hover:text-red-700 hover:bg-red-50 rounded-lg">
              <svg class="w-5 h-5 mr-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 16l4-4m0 0l-4-4m4 4H7m6 4v1a3 3 0 01-3 3H6a3 3 0 01-3-3V7a3 3 0 013-3h4a3 3 0 013 3v1"></path>
              </svg>
              <span class="font-medium">Cerrar Sesión</span>
            </a>
          </div>
        </div>
      </div>

      <div class="w-full bg-white flex flex-col min-h-screen">
        <!-- Header -->
        <header class="bg-white px-4 py-3 flex items-center border-b border-gray-100">
          <button class="p-2 hover:bg-gray-100 rounded-lg transition-colors" id="menuButton">
            <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path>
            </svg>
          </button>
          <div class="flex-1 text-center">
            <div class="inline-block w-32 h-12">
              <img src="/images/logo_sin_fondo.png" alt="Lady's On Go" class="h-full w-full object-contain" />
            </div>
          </div>
          <div class="w-10"></div>
        </header>

        <!-- Contenido principal -->
        <main class="flex-1 px-4 py-6 overflow-y-auto pb-32">
          <h1 class="text-2xl font-semibold mb-6">¿A dónde?</h1>
          
          <!-- Input de destino -->
          <div class="mb-8">
            <input
              type="text"
              id="destino-input"
              placeholder="Ingresa destino"
              class="w-full px-4 py-3 bg-gray-100 rounded-lg text-gray-700 focus:outline-none focus:ring-2 focus:ring-pink-300"
            />
          </div>

          <!-- Mapa pequeño para mostrar ubicación -->
          <div class="mb-6">
            <div id="map" class="w-full h-64 rounded-lg border border-gray-200"></div>
          </div>

          <div class="space-y-4">
            <h2 class="text-lg font-semibold mb-4">Consejos de Seguridad</h2>

            <div class="flex items-start space-x-3 p-3">
              <div class="icon-circle flex-shrink-0 flex items-center justify-center w-10 h-10 rounded-full overflow-hidden">
                <img class="w-full h-full object-cover" src="/images/imagen1.png" alt="" />
              </div>
              <div class="flex-1">
                <h3 class="font-semibold text-gray-800">Tu viaje</h3>
                <p class="text-sm text-gray-600 mt-1">
                  Comparte los detalles de tu viaje con un amigo o familiar para que
                  puedan seguir tu trayecto.
                </p>
              </div>
            </div>

            <div class="flex items-start space-x-3 p-3">
              <div class="icon-circle flex-shrink-0 flex items-center justify-center w-10 h-10 rounded-full overflow-hidden">
                <img class="w-full h-full object-cover" src="/images/imagen2.png" alt="" />
              </div>
              <div class="flex-1">
                <h3 class="font-semibold text-gray-800">Verificar Conductor y Vehículo</h3>
                <p class="text-sm text-gray-600 mt-1">
                  Antes de subir al vehículo, verifica la identidad del conductor y
                  la información del vehículo.
                </p>
              </div>
            </div>

            <div class="flex items-start space-x-3 p-3 mb-6">
              <div class="icon-circle flex-shrink-0 flex items-center justify-center w-10 h-10 rounded-full overflow-hidden">
                <img class="w-full h-full object-cover" src="/images/imagen3.png" alt="" />
              </div>
              <div class="flex-1">
                <h3 class="font-semibold text-gray-800">Emergencia</h3>
                <p class="text-sm text-gray-600 mt-1">
                  En caso de emergencia, usa el botón de emergencia en la app para
                  contactar rápidamente a la policía local.
                </p>
              </div>
            </div>

            <!-- Botón Solicitar un viaje centrado -->
            <div class="flex justify-center mb-4">
              <button
                id="solicitar-viaje-btn"
                class="w-3/4 bg-pink-300 text-gray-800 font-semibold py-3 rounded-lg hover:bg-pink-400 transition-colors text-center"
              >
                Solicitar un viaje
              </button>
            </div>
          </div>
        </main>

        <!-- Navegación inferior fija -->
        <nav class="bg-white border-t border-gray-200 fixed bottom-0 w-full">
          <div class="flex justify-around py-2">
            <button class="flex flex-col items-center p-2 text-pink-600">
              <svg class="w-6 h-6 mb-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6"></path>
              </svg>
              <span class="text-xs">Inicio</span>
            </button>
            <button class="flex flex-col items-center p-2 text-gray-600">
              <a href="/seguridad">
                <svg class="w-6 h-6 mb-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z"></path>
                </svg>
              </a>
              <span class="text-xs">Seguridad</span>
            </button>
            <button class="flex flex-col items-center p-2 text-gray-600">
              <a href="/mapa">
                <svg class="w-6 h-6 mb-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 20l-5.447-2.724A1 1 0 013 16.382V5.618a1 1 0 011.447-.894L9 7m0 13l6-3m-6 3V7m6 10l4.553 2.276A1 1 0 0021 18.382V7.618a1 1 0 00-.553-.894L15 4m0 13V4m0 0L9 7"></path>
                </svg>
              </a>
              <span class="text-xs">Mapa</span>
            </button>
            <button class="flex flex-col items-center p-2 text-gray-600">
              <a href="/perfil">
                <svg class="w-6 h-6 mb-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
                </svg>
              </a>
              <span class="text-xs">Cuenta</span>
            </button>
          </div>
        </nav>
      </div>
    </div>

    <!-- Script de JavaScript para pasajeras -->
    <script type="module" src="/javascript-passenger.js"></script>
  </body>
</html>